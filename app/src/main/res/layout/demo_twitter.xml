<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:htext="http://schemas.android.com/tools"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/twitter_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_gravity="center"
            android:clipChildren="false"
            android:clipToPadding="false">


            <!--<com.hanks.htextview.HTextView
                android:id="@+id/happy_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:textSize="24sp" />-->

            <LinearLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <com.hanks.htextview.HTextView
                    android:id="@+id/happy_birthday"
                    android:gravity="center"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp" />

                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/sweetheart_button"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="0dp"
                    app:sparkbutton_animationSpeed=".85"
                    app:sparkbutton_activeImage="@drawable/sweetheart"
                    app:sparkbutton_iconSize="30dp"
                    app:sparkbutton_primaryColor="@color/heart_primary_color"
                    app:sparkbutton_secondaryColor="@color/heart_secondary_color" />

            </LinearLayout>

                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/twitter_button"
                    android:layout_width="match_parent"
                    android:layout_height="550dp"
                    android:layout_gravity="center"
                    android:clickable="false"
                    app:sparkbutton_activeImage="@drawable/bd_cake"
                    app:sparkbutton_iconSize="180dp"
                    app:sparkbutton_pressOnTouch="false"
                    app:sparkbutton_primaryColor="@color/heart_primary_color"
                    app:sparkbutton_secondaryColor="@color/heart_secondary_color" />


        </android.support.v7.widget.CardView>

    </LinearLayout>
</ScrollView>
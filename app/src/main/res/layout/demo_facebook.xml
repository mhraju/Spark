<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/image_heart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#eee" />

                <!--app:sparkbutton_inActiveImage="@drawable/heartassh"-->

                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/heart_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="16dp"
                    app:sparkbutton_animationSpeed=".85"
                    app:sparkbutton_activeImage="@drawable/redheart"

                    app:sparkbutton_iconSize="30dp"
                    app:sparkbutton_primaryColor="@color/heart_primary_color"
                    app:sparkbutton_secondaryColor="@color/heart_secondary_color" />
            </LinearLayout>

        </android.support.v7.widget.CardView>


        <LinearLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.hanks.htextview.HTextView
                android:id="@+id/heart_textView"
                android:gravity="center"
                android:padding="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp" />

            <com.varunest.sparkbutton.SparkButton
                android:id="@+id/sweetheart_button"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="0dp"
                app:sparkbutton_animationSpeed=".85"
                app:sparkbutton_activeImage="@drawable/sweetheart"
                app:sparkbutton_iconSize="30dp"
                app:sparkbutton_primaryColor="@color/heart_primary_color"
                app:sparkbutton_secondaryColor="@color/heart_secondary_color" />

        </LinearLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal">


                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="110dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_height="110dp"
                    android:id="@+id/heartImage"
                    android:src="@drawable/leena"
                    android:layout_above="@+id/facebook_button" />

                <TextView
                    android:layout_toRightOf="@+id/heartImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:id="@+id/heart_text"
                    android:layout_centerVertical="true"
                    android:fontFamily="sans-serif-light"
                    android:text="          You are my life  \nmy sunshine, my everything...\n  you give me reaon to smile\n          Wishing you yo \n      Have a special Birthday "
                    android:textSize="18sp" />

                <com.varunest.sparkbutton.SparkButton
                    android:id="@+id/facebook_button"
                    android:layout_below="@+id/heart_text"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="16dp"
                    android:layout_alignParentRight="true"
                    app:sparkbutton_activeImage="@drawable/ic_thumb"
                    app:sparkbutton_iconSize="20dp"
                    app:sparkbutton_primaryColor="@color/facebook_primary_color"
                    app:sparkbutton_secondaryColor="@color/facebook_secondary_color" />


            </RelativeLayout>



        </android.support.v7.widget.CardView>

        <!--<LinearLayout
            android:id="@+id/github_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:background="@drawable/button_shape"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="5dp">

            <ImageView
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:src="@drawable/ic_github" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:fontFamily="sans-serif-light"
                android:text="Source Code"
                android:textSize="20dp" />

        </LinearLayout>-->
    </LinearLayout>
</ScrollView>



